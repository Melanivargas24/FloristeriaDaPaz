@model DaPazWebApp.Models.Arreglo

@{
    ViewData["Title"] = "Detalles del Arreglo";
    Layout = "_Layout";
}

<div class="container mt-5 mb-5">
    @if (TempData["CarritoMensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["CarritoMensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row justify-content-center">
        <div class="col-lg-5 d-flex align-items-start justify-content-center mb-4 mb-lg-0">
            <img src="@Model.imagen" class="img-fluid rounded shadow" alt="@Model.nombreArreglo"
                style="max-width: 100%; max-height: 500px; object-fit: contain;">
        </div>
        <div class="col-lg-7">
            <div class="ps-lg-4">
                
                <h1 class="fw-bold">@Model.nombreArreglo</h1>
                <div class="fs-4 text-muted mb-2">₡@Model.precio.ToString("N2")</div>
                <div class="mb-3">
                    <ul class="mb-2">
                        @if (Model.Productos != null && Model.Productos.Count > 0)
                        {
                            foreach (var prod in Model.Productos)
                            {
                                <li>@prod.nombreProducto (Cantidad: @prod.cantidadProducto)</li>
                            }
                        }
                    </ul>
                </div>
                <div class="mb-3">
                    <span class="fw-bold fs-4">Descripción</span>
                    <p class="mb-1" style="white-space: pre-line;">
                        @Model.descripcion
                    </p>
                </div>
                <form asp-action="AgregarAlCarrito" asp-controller="Carrito" method="post"
                    class="d-flex align-items-center mb-2" style="max-width: 300px;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="idProducto" value="@Model.idArreglo" />
                    <input type="hidden" name="tipo" value="arreglo" />
                    <label for="cantidad" class="me-2">Cantidad</label>
                    <input type="number" id="cantidad" name="cantidad" class="form-control me-2" value="1" min="1"
                        style="width: 80px;">
                    <button type="submit" class="btn btn-danger flex-grow-1">AÑADIR AL CARRITO</button>
                </form>
                    <a href="/Catalogo/Index" class="btn btn-outline-secondary mb-3"><i
                        class="fas fa-arrow-left me-2"></i>Regresar al Catálogo</a>
                <div class="mt-2 small">
                    <span class="fw-bold">SKU:</span> @Model.nombreArreglo<br />
                    <span class="fw-bold">Categoría:</span> @Model.nombreCategoriaArreglo
                </div>
            </div>

        </div>
    </div>
</div>