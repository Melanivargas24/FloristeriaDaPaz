@model DaPazWebApp.Models.Arreglo

@{
    ViewData["Title"] = "Detalles del Arreglo";
    Layout = "_Layout";
}

<div class="detalle-arreglo-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="detalle-arreglo-card">
                <div class="detalle-arreglo-header">
                    <h2 class="mb-0">Detalles del Arreglo</h2>
                </div>
                <div class="card-body">
                    @if (TempData["CarritoMensaje"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["CarritoMensaje"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="row">
                        <div class="col-lg-5 d-flex align-items-start justify-content-center mb-4 mb-lg-0">
                            <img src="@Model.imagen" class="detalle-arreglo-imagen img-fluid" alt="@Model.nombreArreglo">
                        </div>
                        <div class="col-lg-7">
                            <div class="ps-lg-4">
                                <h1 class="detalle-arreglo-titulo">@Model.nombreArreglo</h1>
                                
                                @if (Model.TienePromocion)
                                {
                                    <div class="detalle-arreglo-precio">
                                        <span class="text-muted text-decoration-line-through fs-6">₡@Model.PrecioOriginal.ToString("N2")</span><br>
                                        <span class="text-danger fw-bold fs-4">₡@Model.PrecioConDescuento.ToString("N2")</span>
                                        <span class="badge bg-danger ms-2">-@Model.PorcentajeDescuento.GetValueOrDefault().ToString("F0")%</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.NombrePromocion))
                                    {
                                        <div class="alert alert-success py-2 my-2">
                                            <small><i class="bi bi-gift"></i> @Model.NombrePromocion</small>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="detalle-arreglo-precio">₡@Model.precio.ToString("N2")</div>
                                }

                                <div class="detalle-arreglo-lista">
                                    <span class="fw-bold fs-5">Productos incluidos</span>
                                    <ul>
                                        @if (Model.Productos != null && Model.Productos.Count > 0)
                                        {
                                            foreach (var prod in Model.Productos)
                                            {
                                                <li>@prod.nombreProducto (Cantidad: @prod.cantidadProducto)</li>
                                            }
                                        }
                                    </ul>
                                </div>

                                <div>
                                    <span class="fw-bold fs-5">Descripción</span>
                                    <p class="detalle-arreglo-descripcion">@Model.descripcion</p>
                                </div>

                                <form asp-action="AgregarAlCarrito" asp-controller="Carrito" method="post" class="detalle-arreglo-form row g-2 align-items-center mb-3">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="idProducto" value="@Model.idArreglo" />
                                    <input type="hidden" name="tipo" value="arreglo" />
                                    <div class="col-auto">
                                        <label for="cantidad">Cantidad</label>
                                    </div>
                                    <div class="col-auto">
                                        <input type="number" id="cantidad" name="cantidad" class="form-control" value="1" min="1">
                                    </div>
                                    <div class="col-auto">
                                        <button type="submit" style="background: none; border: none; padding: 0;">
                                            <img src="~/images/cart.svg" alt="Añadir al carrito" style="width:32px;height:32px;">
                                        </button>
                                    </div>
                                </form>

                                <a href="/Catalogo/Index" class="btn-cancelar mb-3"><i class="fas fa-arrow-left me-2"></i>Regresar al Catálogo</a>

                                <div class="mt-2 small">
                                    <span class="fw-bold">SKU:</span> @Model.nombreArreglo<br />
                                    <span class="fw-bold">Categoría:</span> @Model.nombreCategoriaArreglo
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
