@model IEnumerable<DaPazWebApp.Models.ProveedorModel>

@{
    ViewData["Title"] = "Lista de Proveedores";
    Layout = "_Layout";
}

<div class="container" style="margin-top:35px; margin-bottom:135px">
    <div class="d-flex justify-between align-items-center encabezado-tablas">
        <h2 class="m-0">Proveedores</h2>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3" style="gap: 0.75rem;">
        <div class="flex-grow-1">
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" id="buscador" class="form-control" placeholder="Buscar proveedor..." aria-label="Buscar" aria-describedby="basic-addon1">
            </div>
        </div>

        <a asp-controller="Proveedor" asp-action="Create" class="btn-create">
            <i class="fas fa-plus"></i> Agregar
        </a>
    </div>

    <table class="table table-bordered table-hover" id="tablaProveedores">
        <thead class="table-dark">
            <tr>
                <th><i class="fas fa-building"></i> Nombre</th>
                <th><i class="fas fa-envelope"></i> Correo</th>
                <th><i class="fas fa-phone"></i> Teléfono</th>
                <th><i class="fas fa-map-marker-alt"></i> Dirección</th>
                <th><i class="fas fa-toggle-on"></i> Estado</th>
                <th><i class="fas fa-cogs"></i> Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var proveedor in Model)
            {
                <tr>
                    <td>@proveedor.nombreProveedor</td>
                    <td>@proveedor.correoProveedor</td>
                    <td>@proveedor.telefonoProveedor</td>
                    <td>@proveedor.direccionProveedor</td>
                    <td>@proveedor.estado</td>
                    <td class="text-center">
                        <a asp-controller="Proveedor" asp-action="Edit" asp-route-id="@proveedor.IdProveedor" class="btn btn-sm btn-edit">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            const tabla = $('#tablaProveedores').DataTable({
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    zeroRecords: "No se encontraron resultados",
                    info: "Mostrando página _PAGE_ de _PAGES_",
                    infoEmpty: "No hay registros disponibles",
                    infoFiltered: "(filtrado de _MAX_ registros totales)",
                    paginate: {
                        previous: "Anterior",
                        next: "Siguiente"
                    }
                },
                pageLength: 10,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                dom: 'lrtip',
                order: [[0, 'asc']], // Orden por nombre
                responsive: true
            });

            $('#buscador').on('keyup', function () {
                tabla.search(this.value).draw();
            });
        });
    </script>
}
