@model IEnumerable<DaPazWebApp.Models.ProveedorModel>

@{
    ViewData["Title"] = "Lista de Proveedores";
    Layout = "_Layout";
}

<div class="container" style="margin-top:35px; margin-bottom:135px">
    <div class="d-flex justify-between align-items-center encabezado-proveedores">
        <h2 class="m-0">Proveedores registrados</h2>
        <a asp-controller="Proveedor" asp-action="Create" class="btn-prov">
            + Agregar
        </a>
    </div>

    <table class="table table-bordered" id="tablaProveedores">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var proveedor in Model)
            {
                <tr>
                    <td>@proveedor.nombreProveedor</td>
                    <td>@proveedor.correoProveedor</td>
                    <td>@proveedor.telefonoProveedor</td>
                    <td>@proveedor.direccionProveedor</td>
                    <td>

                        <a asp-controller="Proveedor" asp-action="Edit" asp-route-id="@proveedor.IdProveedor" class="btn btn-sm btn-edit">
                            Editar
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

