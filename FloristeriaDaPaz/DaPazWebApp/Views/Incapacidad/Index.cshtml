@model IEnumerable<DaPazWebApp.Models.IncapacidadViewModel>

@{
    ViewData["Title"] = "Lista de Incapacidades";
    Layout = "_Layout";
}

<div class="container" style="margin-top:35px; margin-bottom:135px">
    <div class="d-flex justify-between align-items-center encabezado-tablas">
        <h2 class="m-0">Incapacidades</h2>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3" style="gap: 0.75rem;">
        <div class="flex-grow-1">
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" id="buscador" class="form-control" placeholder="Buscar incapacidad..." aria-label="Buscar" aria-describedby="basic-addon1">
            </div>
        </div>

        <a asp-controller="Incapacidad" asp-action="Create" class="btn-create">
            <i class="fas fa-plus"></i> Agregar
        </a>
    </div>

    <table class="table table-bordered table-hover" id="tablaIncapacidades">
        <thead class="table-dark">
            <tr>
                <th><i class="fas fa-hashtag"></i> Número</th>
                <th><i class="fas fa-user"></i> Empleado</th>
                <th><i class="fas fa-notes-medical"></i> Motivo</th>
                <th><i class="fas fa-calendar-day"></i> Inicio</th>
                <th><i class="fas fa-calendar-check"></i> Fin</th>
                <th><i class="fas fa-clock"></i> Días</th>
                <th><i class="fas fa-hospital"></i> Entidad</th>
                <th><i class="fas fa-clinic-medical"></i> Centro Médico</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inc in Model)
            {
                <tr>
                    <td>@inc.NumeroIncapacidad</td>
                    <td>@($"{inc.NombreEmpleado} {inc.ApellidoEmpleado}")</td>
                    <td>@inc.MotivoIncapacidad</td>
                    <td>@inc.FechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>@inc.FechaFin.ToString("dd/MM/yyyy")</td>
                    <td>@inc.CantidadDias</td>
                    <td>@inc.EntidadEmisora</td>
                    <td>@inc.CentroMedicoEmisor</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            const tabla = $('#tablaIncapacidades').DataTable({
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    zeroRecords: "No se encontraron resultados",
                    info: "Mostrando página _PAGE_ de _PAGES_",
                    infoEmpty: "No hay registros disponibles",
                    infoFiltered: "(filtrado de _MAX_ registros totales)",
                    paginate: {
                        previous: "Anterior",
                        next: "Siguiente"
                    }
                },
                pageLength: 10,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                dom: 'lrtip',
                order: [[0, 'asc']], // Orden por número
                responsive: true
            });

            $('#buscador').on('keyup', function () {
                tabla.search(this.value).draw();
            });
        });
    </script>
}
