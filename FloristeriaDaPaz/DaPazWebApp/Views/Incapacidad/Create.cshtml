@model DaPazWebApp.Models.Incapacidad

@{
    ViewData["Title"] = "Registrar Incapacidad";
    Layout = "_Layout";
}

<div class="container" style="margin-top:35px; margin-bottom:135px">
    <div class="d-flex justify-between align-items-center encabezado-proveedores">
        <h2>Registrar Incapacidad</h2>
    </div>

    <form asp-action="Create" method="post">

        <div class="form-group">
            <label asp-for="IdEmpleado" class="control-label">Empleado</label>
            <select asp-for="IdEmpleado" class="form-control" asp-items="ViewBag.Empleados">
                <option value="">Seleccione un Empleado</option>
            </select>
            <span asp-validation-for="IdEmpleado" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NumeroIncapacidad" class="control-label">Número de Incapacidad</label>
            <input asp-for="NumeroIncapacidad" class="form-control" />
            <span asp-validation-for="NumeroIncapacidad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MotivoIncapacidad" class="control-label">Motivo</label>
            <textarea asp-for="MotivoIncapacidad" class="form-control"></textarea>
            <span asp-validation-for="MotivoIncapacidad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FechaInicio" class="control-label">Fecha de Inicio</label>
            <input asp-for="FechaInicio" type="date" class="form-control" />
            <span asp-validation-for="FechaInicio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FechaFin" class="control-label">Fecha de Fin</label>
            <input asp-for="FechaFin" type="date" class="form-control" />
            <span asp-validation-for="FechaFin" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CentroMedicoEmisor" class="control-label">Centro Médico Emisor</label>
            <input asp-for="CentroMedicoEmisor" class="form-control" />
            <span asp-validation-for="CentroMedicoEmisor" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EntidadEmisora" class="control-label">Entidad Emisora</label>
            <select asp-for="EntidadEmisora" class="form-control">
                <option value="">Seleccione Entidad </option>
                <option value="CSS">CSS</option>
                <option value="CSS">INS</option>
                <option value="Otra">Otra</option>
            </select>
            <span asp-validation-for="EntidadEmisora" class="text-danger"></span>
        </div>

        <br />

        <div class="d-flex justify-content-end gap-2 mt-4">
            <button type="submit" class="btn-guardar">Guardar</button>
            <a asp-action="Index" class="btn-cancelar">Cancelar</a>
        </div>
    </form>
</div>
