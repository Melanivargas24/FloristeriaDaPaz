@model IEnumerable<DaPazWebApp.Models.PlanillaViewModel>

@{
    ViewData["Title"] = "Planilla";
    Layout = "_Layout";
}

<div class="container" style="margin-top:35px; margin-bottom:135px">
    <div class="d-flex justify-between align-items-center encabezado-tablas">
        <h2 class="m-0">Planilla</h2>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3" style="gap: 0.75rem;">
        <div class="flex-grow-1">
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" id="buscador" class="form-control" placeholder="Buscar planilla..." aria-label="Buscar"
                       aria-describedby="basic-addon1">
            </div>
        </div>

        <a asp-controller="Planilla" asp-action="Create" class="btn-create">
            <i class="fas fa-plus"></i> Agregar
        </a>
    </div>

    <table class="table table-bordered table-hover" id="tablaPlanilla">
        <thead class="table-dark">
            <tr>
                <th><i class="fas fa-calendar"></i> Fecha</th>
                <th><i class="fas fa-user"></i> Empleado</th>
                <th><i class="fas fa-calendar-plus"></i> Fecha de Ingreso</th>
                <th><i class="fas fa-briefcase"></i> Cargo</th>
                <th><i class="fas fa-money-bill-wave"></i> Salario Bruto</th>
                <th><i class="fas fa-minus-circle"></i> Total Deducciones</th>
                <th><i class="fas fa-wallet"></i> Salario Neto</th>
                <th><i class="fas fa-cogs"></i> Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var planilla in Model)
            {
                <tr>
                    <td>@planilla.FechaPlanilla.ToString("dd/MM/yyyy")</td>
                    <td>@($"{planilla.NombreEmpleado} {planilla.ApellidoEmpleado}")</td>
                    <td>@planilla.FechaIngreso.ToString("dd/MM/yyyy")</td>
                    <td>@planilla.Cargo</td>
                    <td>₡@planilla.SalarioBruto.ToString("N2")</td>
                    <td>₡@planilla.Deducciones.ToString("N2")</td>
                    <td>₡@planilla.SalarioNeto.ToString("N2")</td>
                    <td class="text-center">
                        <a asp-controller="Planilla" asp-action="ImprimirPlanilla"
                           asp-route-id="@planilla.IdPlanilla" class="btn btn-sm btn-edit">Descargar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div id="resultadoPlanilla"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            const tabla = $('#tablaPlanilla').DataTable({
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    zeroRecords: "No se encontraron resultados",
                    info: "Mostrando página _PAGE_ de _PAGES_",
                    infoEmpty: "No hay registros disponibles",
                    infoFiltered: "(filtrado de _MAX_ registros totales)",
                    paginate: {
                        previous: "Anterior",
                        next: "Siguiente"
                    }
                },
                pageLength: 10,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                dom: 'lrtip',
                order: [[0, 'desc']], // Orden por fecha
                responsive: true
            });

            $('#buscador').on('keyup', function () {
                tabla.search(this.value).draw();
            });
        });
    </script>
}
