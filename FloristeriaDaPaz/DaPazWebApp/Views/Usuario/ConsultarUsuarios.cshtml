
@model IEnumerable<DaPazWebApp.Models.UsuarioConsultaModel>

@{
    ViewData["Title"] = "Consultar Usuarios";
}

<div class="container" style="margin-top:35px; margin-bottom:135px">
    <div class="d-flex justify-between align-items-center encabezado-empleados">
        <h2 class="m-0">Empleados registrados</h2>
        <a asp-controller="Empleado" asp-action="AgregarE" class="btn-prov">
            + Agregar
        </a>
    </div>

    <table class="table table-bordered" id="tablaUsuarios">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Estado</th>
            <th>Rol</th>
            <th>Dirección</th>
            <th>Distrito</th>
            <th>Cantón</th>
            <th>Provincia</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var usuario in Model)
    {
        <tr>
            <td>@usuario.idUsuario</td>
            <td>@usuario.nombre</td>
            <td>@usuario.apellido</td>
            <td>@usuario.correo</td>
            <td>@usuario.telefono</td>
            <td>@usuario.estado</td>
            <td>@usuario.nombreRol</td>
            <td>@usuario.direccionExacta</td>
            <td>@usuario.nombreDistrito</td>
            <td>@usuario.nombreCanton</td>
            <td>@usuario.nombreProvincia</td>

                    <td>

                        <a asp-controller="Empleado" asp-action="EditarE" asp-route-id="@usuario.idUsuario" class="btn btn-sm btn-edit">
                            Editar
                        </a>

                    </td>
        </tr>
    }
    </tbody>
</table>
</div>
