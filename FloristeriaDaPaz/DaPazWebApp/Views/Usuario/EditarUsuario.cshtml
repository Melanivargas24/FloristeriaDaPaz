@model DaPazWebApp.Models.EditarUsuarioModel

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "_Layout";
}



<div class="container" style="margin-top:35px; margin-bottom:135px">

    <div class="d-flex justify-between align-items-center encabezado-usuarios">
        <h2>Editar usuario</h2>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="EditarUsuario" method="post">
        <input type="hidden" asp-for="idUsuario" />

        <div class="form-group">
            <label asp-for="nombre" class="control-label">Nombre</label>
            <input asp-for="nombre" class="form-control" />
            <span asp-validation-for="nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="apellido" class="control-label">Apellido</label>
            <input asp-for="apellido" class="form-control" />
            <span asp-validation-for="apellido" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="telefono" class="control-label">Teléfono</label>
            <input asp-for="telefono" class="form-control" pattern="[0-9]*" inputmode="numeric" maxlength="12" oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
            <span asp-validation-for="telefono" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="correo" class="control-label">Correo</label>
            <input asp-for="correo" class="form-control" />
            <span asp-validation-for="correo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="contrasenaActual" class="control-label">Contraseña Actual</label>
            <input asp-for="contrasenaActual" type="password" class="form-control" id="contrasenaActual" />
            <span asp-validation-for="contrasenaActual" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="nuevaContrasena" class="control-label">Nueva Contraseña</label>
            <input asp-for="nuevaContrasena" type="password" class="form-control" id="nuevaContrasena" />
            <span asp-validation-for="nuevaContrasena" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="direccion" class="control-label">Dirección</label>
            <input asp-for="direccion" id="direccion" class="form-control" 
                   placeholder="Ej: 200 metros norte del parque central, Casa #123" 
                   maxlength="200" />
            <small class="form-text text-muted">Ingrese su dirección completa incluyendo referencias</small>
            <span asp-validation-for="direccion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="idProvincia" class="control-label">Provincia</label>
            <select asp-for="idProvincia" class="form-control" asp-items="ViewBag.Provincias" id="provinciaSelect">
                <option value="">-- Seleccione Provincia --</option>
            </select>
            <span asp-validation-for="idProvincia" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="idCanton" class="control-label">Cantón</label>
            <select asp-for="idCanton" class="form-control" asp-items="ViewBag.Cantones" id="cantonSelect">
                <option value="">-- Seleccione Cantón --</option>
            </select>
            <span asp-validation-for="idCanton" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="idDistrito" class="control-label">Distrito</label>
            <select asp-for="idDistrito" class="form-control" asp-items="ViewBag.Distritos" id="distritoSelect">
                <option value="">-- Seleccione Distrito --</option>
            </select>
            <span asp-validation-for="idDistrito" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <button type="submit" class="btn-guardar">Guardar</button>
            <a asp-controller="Home" asp-action="Index" class="btn-cancelar">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // JavaScript para validación de contraseñas
        function validarContraseñas() {
            var contrasenaActual = $('#contrasenaActual').val();
            var nuevaContrasena = $('#nuevaContrasena').val();
            var esValido = true;
            
            // Limpiar mensajes previos
            $('.password-validation-error').remove();
            
            // Si uno está lleno, ambos deben estarlo
            if ((contrasenaActual && !nuevaContrasena) || (!contrasenaActual && nuevaContrasena)) {
                var mensaje = '<div class="text-danger password-validation-error">Para cambiar la contraseña, debe completar tanto la contraseña actual como la nueva</div>';
                if (contrasenaActual && !nuevaContrasena) {
                    $('#nuevaContrasena').after(mensaje);
                }
                if (!contrasenaActual && nuevaContrasena) {
                    $('#contrasenaActual').after(mensaje);
                }
                esValido = false;
            }
            
            // Si ambas están llenas, validar longitud de la nueva contraseña
            if (contrasenaActual && nuevaContrasena) {
                if (nuevaContrasena.length < 6) {
                    $('#nuevaContrasena').after('<div class="text-danger password-validation-error">La nueva contraseña debe tener al menos 6 caracteres</div>');
                    esValido = false;
                }
            }
            
            return esValido;
        }
        
        // JavaScript para manejar los dropdowns de ubicación
        $(document).ready(function() {
            // Validación en tiempo real de contraseñas
            $('#contrasenaActual, #nuevaContrasena').on('input blur', function() {
                validarContraseñas();
            });
            
            // Validación básica de dirección
            $('#direccion').on('blur', function() {
                var direccion = $(this).val().trim();
                var direccionSpan = $('span[data-valmsg-for="direccion"]');
                
                // Limpiar mensajes previos
                direccionSpan.text('');
                direccionSpan.removeClass('field-validation-error').addClass('field-validation-valid');
                $('#direccion').removeClass('input-validation-error');
                
                if (direccion.length > 0 && direccion.length < 10) {
                    direccionSpan.text('La dirección debe ser más descriptiva (mínimo 10 caracteres)');
                    direccionSpan.removeClass('field-validation-valid').addClass('field-validation-error');
                    $('#direccion').addClass('input-validation-error');
                }
            });
            
            // Validar antes del envío
            $('form').on('submit', function(e) {
                if (!validarContraseñas()) {
                    e.preventDefault();
                    return false;
                }
                
                // Validar dirección si está presente
                var direccion = $('#direccion').val().trim();
                if (direccion.length > 0 && direccion.length < 10) {
                    e.preventDefault();
                    $('#direccion').focus();
                    return false;
                }
            });
            var cantonInicial = '@Model.idCanton';
            var distritoInicial = '@Model.idDistrito';

            // Cuando cambia la provincia, cargar cantones
            $('#provinciaSelect').change(function() {
                var provinciaId = $(this).val();
                $('#cantonSelect').empty().append('<option value="">-- Seleccione Cantón --</option>');
                $('#distritoSelect').empty().append('<option value="">-- Seleccione Distrito --</option>');
                
                if (provinciaId) {
                    $.get('@Url.Action("GetCantonesByProvincia", "Usuario")', { idProvincia: provinciaId }, function(data) {
                        $.each(data, function(index, item) {
                            $('#cantonSelect').append('<option value="' + item.value + '">' + item.text + '</option>');
                        });
                    });
                }
            });
            
            // Cuando cambia el cantón, cargar distritos
            $('#cantonSelect').change(function() {
                var cantonId = $(this).val();
                $('#distritoSelect').empty().append('<option value="">-- Seleccione Distrito --</option>');
                
                if (cantonId) {
                    $.get('@Url.Action("GetDistritosByCanton", "Usuario")', { idCanton: cantonId }, function(data) {
                        $.each(data, function(index, item) {
                            $('#distritoSelect').append('<option value="' + item.value + '">' + item.text + '</option>');
                        });
                    });
                }
            });

            // Cargar cantones y distritos iniciales si hay provincia seleccionada
            var provinciaInicial = $('#provinciaSelect').val();
            if (provinciaInicial) {
                $.get('@Url.Action("GetCantonesByProvincia", "Usuario")', { idProvincia: provinciaInicial }, function(data) {
                    $.each(data, function(index, item) {
                        var selected = item.value == cantonInicial ? ' selected' : '';
                        $('#cantonSelect').append('<option value="' + item.value + '"' + selected + '>' + item.text + '</option>');
                    });
                    
                    // Si hay cantón inicial, cargar distritos
                    if (cantonInicial && cantonInicial !== '') {
                        setTimeout(function() { // Dar tiempo para que se cargue el cantón
                            $.get('@Url.Action("GetDistritosByCanton", "Usuario")', { idCanton: cantonInicial }, function(data) {
                                $.each(data, function(index, item) {
                                    var selected = item.value == distritoInicial ? ' selected' : '';
                                    $('#distritoSelect').append('<option value="' + item.value + '"' + selected + '>' + item.text + '</option>');
                                });
                            });
                        }, 500);
                    }
                });
            }
        });
    </script>
}
