@model DaPazWebApp.Models.EditarUsuarioModel

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<div class="container" style="margin-top:35px; margin-bottom:135px">

    <div class="d-flex justify-between align-items-center encabezado-usuarios">
        <h2>Editar usuario</h2>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="EditarUsuario" method="post">
        <input type="hidden" asp-for="idUsuario" />

        <div class="form-group">
            <label asp-for="nombre" class="control-label">Nombre</label>
            <input asp-for="nombre" class="form-control" />
            <span asp-validation-for="nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="apellido" class="control-label">Apellido</label>
            <input asp-for="apellido" class="form-control" />
            <span asp-validation-for="apellido" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="telefono" class="control-label">Teléfono</label>
            <input asp-for="telefono" class="form-control" />
            <span asp-validation-for="telefono" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="correo" class="control-label">Correo</label>
            <input asp-for="correo" class="form-control" />
            <span asp-validation-for="correo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="contrasenaActual" class="control-label">Contraseña Actual</label>
            <input asp-for="contrasenaActual" type="password" class="form-control" />
            <span asp-validation-for="contrasenaActual" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="nuevaContrasena" class="control-label">Nueva Contraseña</label>
            <input asp-for="nuevaContrasena" type="password" class="form-control" />
            <span asp-validation-for="nuevaContrasena" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="direccion" class="control-label">Dirección (haz click en el mapa)</label>
            <input asp-for="direccion" id="direccion" class="form-control" readonly />
            <span asp-validation-for="direccion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="idProvincia" class="control-label">Provincia</label>
            <select asp-for="idProvincia" class="form-control" asp-items="ViewBag.Provincias" id="provinciaSelect">
                <option value="">-- Seleccione Provincia --</option>
            </select>
            <span asp-validation-for="idProvincia" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="idCanton" class="control-label">Cantón</label>
            <select asp-for="idCanton" class="form-control" asp-items="ViewBag.Cantones" id="cantonSelect">
                <option value="">-- Seleccione Cantón --</option>
            </select>
            <span asp-validation-for="idCanton" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="idDistrito" class="control-label">Distrito</label>
            <select asp-for="idDistrito" class="form-control" asp-items="ViewBag.Distritos" id="distritoSelect">
                <option value="">-- Seleccione Distrito --</option>
            </select>
            <span asp-validation-for="idDistrito" class="text-danger"></span>
        </div>

        <div id="map" style="height: 300px; width: 100%; margin-top: 10px;"></div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <button type="submit" class="btn-guardar">Guardar</button>
            <a asp-controller="Home" asp-action="Index" class="btn-cancelar">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        var map = L.map('map').setView([9.9281, -84.0907], 13); // San José, CR

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors'
        }).addTo(map);

        var marker = L.marker([9.9281, -84.0907], {draggable: true}).addTo(map);

        function reverseGeocode(lat, lon) {
            fetch(`https://nominatim.openstreetmap.org/reverse?format=jsonv2&lat=${lat}&lon=${lon}`)
                .then(response => response.json())
                .then(data => {
                    if (data && data.display_name) {
                        document.getElementById('direccion').value = data.display_name;
                    } else {
                        document.getElementById('direccion').value = "Dirección no encontrada";
                    }
                })
                .catch(error => {
                    console.error('Error en reverse geocoding:', error);
                    document.getElementById('direccion').value = "Error al obtener dirección";
                });
        }

        map.on('click', function(e) {
            var lat = e.latlng.lat;
            var lon = e.latlng.lng;

            marker.setLatLng([lat, lon]);
            reverseGeocode(lat, lon);
        });

        marker.on('dragend', function(e) {
            var position = marker.getLatLng();
            reverseGeocode(position.lat, position.lng);
        });

        // JavaScript para manejar los dropdowns de ubicación
        $(document).ready(function() {
            var cantonInicial = '@Model.idCanton';
            var distritoInicial = '@Model.idDistrito';

            // Cuando cambia la provincia, cargar cantones
            $('#provinciaSelect').change(function() {
                var provinciaId = $(this).val();
                $('#cantonSelect').empty().append('<option value="">-- Seleccione Cantón --</option>');
                $('#distritoSelect').empty().append('<option value="">-- Seleccione Distrito --</option>');
                
                if (provinciaId) {
                    $.get('@Url.Action("GetCantonesByProvincia", "Usuario")', { idProvincia: provinciaId }, function(data) {
                        $.each(data, function(index, item) {
                            $('#cantonSelect').append('<option value="' + item.value + '">' + item.text + '</option>');
                        });
                    });
                }
            });
            
            // Cuando cambia el cantón, cargar distritos
            $('#cantonSelect').change(function() {
                var cantonId = $(this).val();
                $('#distritoSelect').empty().append('<option value="">-- Seleccione Distrito --</option>');
                
                if (cantonId) {
                    $.get('@Url.Action("GetDistritosByCanton", "Usuario")', { idCanton: cantonId }, function(data) {
                        $.each(data, function(index, item) {
                            $('#distritoSelect').append('<option value="' + item.value + '">' + item.text + '</option>');
                        });
                    });
                }
            });

            // Cargar cantones y distritos iniciales si hay provincia seleccionada
            var provinciaInicial = $('#provinciaSelect').val();
            if (provinciaInicial) {
                $.get('@Url.Action("GetCantonesByProvincia", "Usuario")', { idProvincia: provinciaInicial }, function(data) {
                    $.each(data, function(index, item) {
                        var selected = item.value == cantonInicial ? ' selected' : '';
                        $('#cantonSelect').append('<option value="' + item.value + '"' + selected + '>' + item.text + '</option>');
                    });
                    
                    // Si hay cantón inicial, cargar distritos
                    if (cantonInicial && cantonInicial !== '') {
                        setTimeout(function() { // Dar tiempo para que se cargue el cantón
                            $.get('@Url.Action("GetDistritosByCanton", "Usuario")', { idCanton: cantonInicial }, function(data) {
                                $.each(data, function(index, item) {
                                    var selected = item.value == distritoInicial ? ' selected' : '';
                                    $('#distritoSelect').append('<option value="' + item.value + '"' + selected + '>' + item.text + '</option>');
                                });
                            });
                        }, 500);
                    }
                });
            }
        });
    </script>
}
