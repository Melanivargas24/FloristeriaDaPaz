@model DaPazWebApp.Models.Promociones

@{
    ViewData["Title"] = "Editar Promoción";
    Layout = "_Layout";
}

<div class="container" style="margin-top:35px; margin-bottom:135px">
    <div class="d-flex justify-between align-items-center encabezado-proveedores">
        <h2>Editar Promoción</h2>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="idPromocion" />

        <div class="form-group">
            <label asp-for="nombrePromocion" class="control-label">Nombre de la promoción</label>
            <input asp-for="nombrePromocion" class="form-control" />
            <span asp-validation-for="nombrePromocion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="descuentoPorcentaje" class="control-label">Descuento (%)</label>
            <input asp-for="descuentoPorcentaje" class="form-control" type="number" step="0.01" min="0" max="100" />
            <span asp-validation-for="descuentoPorcentaje" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="fechaInicio" class="control-label">Fecha inicio</label>
            <input asp-for="fechaInicio" class="form-control" type="date" id="fechaInicio" />
            <span asp-validation-for="fechaInicio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="fechaFin" class="control-label">Fecha fin</label>
            <input asp-for="fechaFin" class="form-control" type="date" id="fechaFin" />
            <span asp-validation-for="fechaFin" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="idProducto" class="control-label">Producto</label>
            <select asp-for="idProducto" class="form-control" asp-items="ViewBag.Productos">
                <option value="">-- Seleccione un producto --</option>
            </select>
            <span asp-validation-for="idProducto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="estado" class="control-label">Estado</label>
            <select asp-for="estado" class="form-control" asp-items="ViewBag.Estados">
                <option value="">-- Seleccione un estado --</option>
            </select>
            <span asp-validation-for="estado" class="text-danger"></span>
        </div>

        <br />

        <div class="d-flex justify-content-end gap-2 mt-4">
            <button type="submit" class="btn-guardar">Guardar</button>
            <a asp-action="Index" class="btn-cancelar">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Validar fechas cuando cambian
            $('#fechaInicio, #fechaFin').on('change', function() {
                var fechaInicio = $('#fechaInicio').val();
                var fechaFin = $('#fechaFin').val();
                
                if (fechaInicio && fechaFin) {
                    if (new Date(fechaInicio) > new Date(fechaFin)) {
                        alert('La fecha de inicio no puede ser posterior a la fecha de fin');
                        $(this).val('');
                        $(this).focus();
                    }
                }
                
                // Actualizar fecha mínima de fin cuando cambia inicio
                if (fechaInicio) {
                    $('#fechaFin').attr('min', fechaInicio);
                }
            });
            
            // Establecer la fecha mínima de fin basada en inicio al cargar
            var fechaInicioActual = $('#fechaInicio').val();
            if (fechaInicioActual) {
                $('#fechaFin').attr('min', fechaInicioActual);
            }
            
            // NO establecer fecha mínima para edición - permitir fechas pasadas
            
            // Validar antes de enviar el formulario
            $('form').on('submit', function(e) {
                var fechaInicio = $('#fechaInicio').val();
                var fechaFin = $('#fechaFin').val();
                
                if (fechaInicio && fechaFin) {
                    if (new Date(fechaInicio) > new Date(fechaFin)) {
                        e.preventDefault();
                        alert('Por favor, corrija las fechas antes de continuar');
                        return false;
                    }
                }
            });
        });
    </script>
}