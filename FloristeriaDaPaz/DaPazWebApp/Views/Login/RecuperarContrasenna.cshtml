@model DaPazWebApp.Models.UsersModel

@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="container mt-5 recover-container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="recover-card shadow rounded-4">
                <div class="recover-card-header text-center">
                    <h3 class="mb-0">Floristería Da Paz</h3>
                    <p class="mb-0">Recuperar Contraseña</p>
                </div>
                <div class="recover-card-body">

                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-info" role="alert">
                            @ViewBag.Mensaje
                        </div>
                    }

                    <form asp-action="RecuperarContrasenna" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="correo" class="form-label">Correo electrónico</label>
                            <input asp-for="correo" class="form-control recover-input" placeholder="correo@ejemplo.com" autocomplete="email" />
                            <span asp-validation-for="correo" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-3 text-center">
                            <button type="submit" class="recover-btn">Enviar Código</button>
                        </div>
                    </form>
                </div>

                <div class="recover-card-footer text-center">
                    ¿Ya tienes cuenta? <a asp-action="Login" class="recover-link">Inicia sesión</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
