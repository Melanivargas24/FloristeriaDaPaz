@model DaPazWebApp.Models.UsersModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div class="container mt-5 login-container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="login-card shadow rounded-4">
                <div class="login-card-header text-center">
                    <h3 class="mb-0">Floristería Da Paz</h3>
                    <p class="mb-0">Iniciar sesión</p>
                </div>
                <div class="login-card-body">

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }

                    <script>
                        // Verificar si la sesión fue invalidada
                        if (document.cookie.includes('SesionInvalidada=true')) {
                            // Mostrar notificación
                            const alertDiv = document.createElement('div');
                            alertDiv.className = 'alert alert-warning alert-dismissible fade show';
                            alertDiv.innerHTML = `
                                <strong>Sesión cerrada:</strong> Su sesión anterior fue cerrada porque inició sesión en otro dispositivo o navegador.
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            `;
                            
                            // Insertar antes del formulario
                            const form = document.querySelector('form');
                            form.parentNode.insertBefore(alertDiv, form);
                            
                            // Limpiar la cookie
                            document.cookie = 'SesionInvalidada=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
                        }
                    </script>

                    <form asp-action="Login" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="correo" class="form-label">Correo electrónico</label>
                            <input asp-for="correo" class="form-control login-input" placeholder="correo@ejemplo.com" autocomplete="email" />
                            <span asp-validation-for="correo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="contrasena" class="form-label">Contraseña</label>
                            <input asp-for="contrasena" type="password" class="form-control login-input" placeholder="******" autocomplete="current-password" />
                            <span asp-validation-for="contrasena" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-3">
                            <button type="submit" class="login-btn">Ingresar</button>
                        </div>
                    </form>
                </div>

                <div class="login-card-footer text-center">
                    <div>¿No tienes cuenta? <a asp-action="Signin" class="login-link">Crea una aquí</a></div>
                    <div class="mt-2">¿Olvidaste tu contraseña? <a asp-action="RecuperarContrasenna" class="login-link">Recupérala aquí</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
