@model DaPazWebApp.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
    Layout = "_Layout";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="row g-0">
                    <div class="col-md-5 d-flex align-items-center justify-content-center bg-light">
                        <img src="@Model.Imagen" class="img-fluid rounded-start p-3" alt="@Model.NombreProducto" style="max-height: 350px; object-fit: contain;">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <h2 class="card-title mb-3">@Model.NombreProducto</h2>
                            <p class="card-text mb-2"><span class="fw-bold">Descripción:</span> @Model.Descripcion</p>
                            <p class="card-text mb-2"><span class="fw-bold">Precio:</span> <span class="text-success">₡@Model.Precio?.ToString("N2")</span></p>
                            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-outline-secondary mt-4">Volver al catálogo</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
