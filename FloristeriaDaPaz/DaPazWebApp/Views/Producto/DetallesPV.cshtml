@model DaPazWebApp.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
    Layout = "_Layout";
}


<div class="producto-detalle-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="producto-detalle-card">
                <div class="producto-detalle-header">
                    <h2 class="mb-0">Detalles del Producto</h2>
                </div>
                <div class="card-body">
                    @if (TempData["CarritoMensaje"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["CarritoMensaje"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="row">
                        <div class="col-lg-5 d-flex align-items-start justify-content-center mb-4 mb-lg-0 position-relative">
                            @* Etiqueta de promoci√≥n *@
                            @if (Model.TienePromocion)
                            {
                                <div class="position-absolute top-0 start-0 m-2" style="z-index: 10;">
                                    <span class="badge bg-danger fs-6 px-3 py-2">
                                        -@Model.PorcentajeDescuento.GetValueOrDefault().ToString("F0")% OFF
                                    </span>
                                </div>
                            }
                            <img src="@Model.Imagen" class="producto-detalle-imagen img-fluid" alt="@Model.NombreProducto">
                        </div>
                        <div class="col-lg-7">
                            <div class="ps-lg-4">
                                <h1 class="producto-detalle-titulo">@Model.NombreProducto</h1>
                                
                                @* Mostrar precios con promoci√≥n *@
                                @if (Model.TienePromocion)
                                {
                                    <div class="producto-detalle-precio-container mb-3">
                                        <div class="text-muted text-decoration-line-through fs-5">‚Ç°@Model.Precio?.ToString("N2")</div>
                                        <div class="producto-detalle-precio text-danger">‚Ç°@Model.PrecioConDescuento.ToString("N2")</div>
                                        @if (!string.IsNullOrEmpty(Model.NombrePromocion))
                                        {
                                            <div class="text-success small fw-bold">üéâ @Model.NombrePromocion</div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="producto-detalle-precio">‚Ç°@Model.Precio?.ToString("N2")</div>
                                }
                                <div class="producto-detalle-descripcion-wrap">
                                    <div class="fw-bold fs-5 mb-1">Descripci√≥n</div>
                                    <p class="producto-detalle-descripcion">@Model.Descripcion</p>

                                </div>



                                <form asp-action="AgregarAlCarrito" asp-controller="Carrito" method="post" class="producto-detalle-form row g-2 align-items-center mb-3">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="idProducto" value="@Model.IdProducto" />
                                    <div class="col-auto">
                                        <label for="cantidad">Cantidad</label>
                                    </div>
                                    <div class="col-auto">
                                        <input type="number" id="cantidad" name="cantidad" class="form-control" value="1" min="1">
                                    </div>
                                    <div class="col-auto">
                                        <button type="submit" style="background: none; border: none; padding: 0;">
                                            <img src="~/images/cart.svg" alt="A√±adir al carrito" style="width:32px;height:32px;">
                                        </button>
                                    </div>
                                </form>

                                <a href="/Catalogo/Index" class="producto-detalle-volver mb-3">
                                    <i class="fas fa-arrow-left me-2"></i>Regresar al Cat√°logo
                                </a>

                                <div class="mt-2 small">
                                    <span class="fw-bold">SKU:</span> @Model.NombreProducto<br />
                                    <span class="fw-bold">Categor√≠a:</span> @Model.NombreCategoriaProducto
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>