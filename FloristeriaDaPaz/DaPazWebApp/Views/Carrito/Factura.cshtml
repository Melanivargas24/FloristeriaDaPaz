@model DaPazWebApp.Models.FacturaViewModel

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Factura</h2>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-lg-4">
                            <div class="card h-100 border-success">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                    <h1 class="display-6 fw-bold text-success mb-3">Pedido #@Model.Factura?.idFactura</h1>
                                    <h6 class="mb-2">Fecha: @Model.Factura?.fechaFactura.ToString("dd/MM/yyyy HH:mm")</h6>
                                    <h5>Total: <span class="text-danger">‚Ç°@Model.Factura?.totalFactura.ToString("N2")</span></h5>
                                    @if (Model.Ventas != null && Model.Ventas.Any(v => v.metodoPago?.ToLower() == "sinpe" || v.metodoPago?.ToLower().Contains("sinpe") == true))
                                    {
                                        <div class="alert alert-warning mt-4 text-center">
                                            <strong>Para finalizar tu pedido realiza el SINPE M√≥vil al n√∫mero <span class="text-danger">8888-2222</span> y en el detalle poner el n√∫mero de pedido <span class="fw-bold">@Model.Factura?.idFactura</span></strong>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="card h-100 border-success">
                                <div class="card-header bg-light">
                                    <h4 class="mb-0">Detalle de la compra</h4>
                                </div>
                                <div class="card-body">
                                    <table class="table table-bordered align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Producto/Arreglo</th>
                                                <th>Cantidad</th>
                                                <th>Precio Unitario</th>
                                                <th>Promoci√≥n</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Ventas != null)
                                            {
                                                foreach (var v in Model.Ventas)
                                                {
                                                    <tr>
                                                        <td class="fw-bold">
                                                            @(v.idProducto != null ? v.NombreProducto ?? $"Producto #{v.idProducto}" : $"Arreglo #{v.idArreglo}")
                                                        </td>
                                                        <td>@v.cantidad</td>
                                                        <td>
                                                            @{
                                                                var precioUnitario = v.cantidad > 0 ? v.total / v.cantidad : 0;
                                                            }
                                                            ‚Ç°@precioUnitario.ToString("N2")
                                                        </td>
                                                        <td>
                                                            @if (v.idProducto != null)
                                                            {
                                                                // Aqu√≠ podr√≠as verificar si el producto ten√≠a promoci√≥n
                                                                <span class="text-muted">-</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>
                                                        <td>‚Ç°@v.total.ToString("N2")</td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                    
                                    @{
                                        // C√°lculo aproximado de ahorros - en un caso real esto vendr√≠a de la base de datos
                                        var tieneDescuentos = false; // Esta l√≥gica se mejorar√≠a con datos reales
                                    }
                                    
                                    @if (tieneDescuentos)
                                    {
                                        <div class="mt-4 p-3 bg-light rounded">
                                            <h6 class="text-success">üéâ Resumen de ahorros en este pedido:</h6>
                                            <div class="row">
                                                <div class="col-sm-8">Descuentos por promociones aplicadas:</div>
                                                <div class="col-sm-4 text-end text-success">-‚Ç°0.00</div>
                                            </div>
                                            <hr>
                                            <div class="row fw-bold">
                                                <div class="col-sm-8">Total ahorrado:</div>
                                                <div class="col-sm-4 text-end text-success">‚Ç°0.00</div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
