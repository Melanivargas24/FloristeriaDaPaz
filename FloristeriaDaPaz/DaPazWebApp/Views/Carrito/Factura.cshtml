@model DaPazWebApp.Models.FacturaViewModel

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Factura</h2>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-lg-4">
                            <div class="card h-100 border-success">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                    <h1 class="display-6 fw-bold text-success mb-3">Pedido #@Model.Factura?.idFactura</h1>
                                    <h6 class="mb-2">Fecha: @Model.Factura?.fechaFactura.ToString("dd/MM/yyyy HH:mm")</h6>
                                    <h5>Total: <span class="text-danger">₡@Model.Factura?.totalFactura.ToString("N2")</span></h5>
                                    @if (Model.Ventas != null && Model.Ventas.Any(v => v.metodoPago?.ToLower() == "sinpe" || v.metodoPago?.ToLower().Contains("sinpe") == true))
                                    {
                                        <div class="alert alert-warning mt-4 text-center">
                                            <strong>Para finalizar tu pedido realiza el SINPE Móvil al número <span class="text-danger">8888-2222</span> y en el detalle poner el número de pedido <span class="fw-bold">@Model.Factura?.idFactura</span></strong>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="card h-100 border-success">
                                <div class="card-header bg-light">
                                    <h4 class="mb-0">Detalle de la compra</h4>
                                </div>
                                <div class="card-body">
                                    <table class="table table-bordered align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Producto/Arreglo</th>
                                                <th>Cantidad</th>
                                                <th>Precio Unitario</th>
                                                <th>Promoción</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Ventas != null)
                                            {
                                                foreach (var v in Model.Ventas)
                                                {
                                                    <tr>
                                                        <td class="fw-bold">
                                                            @(v.idProducto != null ? v.NombreProducto ?? $"Producto #{v.idProducto}" : $"Arreglo #{v.idArreglo}")
                                                        </td>
                                                        <td>@v.cantidad</td>
                                                        <td>
                                                            @{
                                                                var precioUnitario = v.cantidad > 0 ? v.total / v.cantidad : 0;
                                                            }
                                                            ₡@precioUnitario.ToString("N2")
                                                        </td>
                                                        <td>
                                                            @if (v.idProducto != null)
                                                            {
                                                                // Aquí podrías verificar si el producto tenía promoción
                                                                <span class="text-muted">-</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>
                                                        <td>₡@v.total.ToString("N2")</td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                    
                                    <!-- Desglose de totales -->
                                    <div class="mt-4 p-3 bg-light rounded">
                                        <div class="row mb-2">
                                            <div class="col-sm-8 fw-bold">Subtotal productos:</div>
                                            <div class="col-sm-4 text-end">₡@Model.SubtotalProductos.ToString("N2")</div>
                                        </div>
                                        
                                        @if (Model.TieneEnvioADomicilio)
                                        {
                                            @if (Model.CostoEnvio > 0)
                                            {
                                                <div class="row mb-2">
                                                    <div class="col-sm-8">Costo de envío (@Model.NombreDistrito):</div>
                                                    <div class="col-sm-4 text-end">₡@Model.CostoEnvio.ToString("N2")</div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="row mb-2">
                                                    <div class="col-sm-8">Envío a domicilio:</div>
                                                    <div class="col-sm-4 text-end text-muted">
                                                        <small>(Información no disponible)</small>
                                                    </div>
                                                </div>
                                            }
                                        }
                                        
                                        <hr>
                                        <div class="row fw-bold">
                                            <div class="col-sm-8">Total:</div>
                                            <div class="col-sm-4 text-end text-danger">₡@Model.Factura?.totalFactura.ToString("N2")</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>