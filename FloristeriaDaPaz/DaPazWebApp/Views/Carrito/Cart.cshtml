@model DaPazWebApp.Models.CarritoViewModel
@{
    ViewData["Title"] = "Carrito de Compras";
    Layout = "_Layout";
}

<div class="container mt-5 mb-5">
    <h1 class="fw-bold mb-4">Carrito de Compras</h1>
    @if (Model.Items.Count == 0)
    {
        <div class="alert alert-info">Tu carrito está vacío.</div>
        <a href="/Catalogo/Index" class="btn btn-primary mt-3">Ir al Catálogo</a>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Imagen</th>
                        <th>Producto</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td style="width:100px"><img src="@item.Imagen" alt="@item.NombreProducto" class="img-fluid rounded" style="max-width:80px;max-height:80px;object-fit:contain;"></td>
                            <td>@item.NombreProducto</td>
                            <td>₡@item.Precio.ToString("N2")</td>
                            <td>@item.Cantidad</td>
                            <td>₡@(item.Precio * item.Cantidad)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-end mt-3">
            <h4>Total: <span class="text-danger">₡@Model.Total.ToString("N2")</span></h4>
            <a href="/Carrito/Checkout" class="btn btn-success btn-lg mt-2">Proceder al Pago</a>
        </div>
    }

    @if (TempData["PedidoConfirmado"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["PedidoConfirmado"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>