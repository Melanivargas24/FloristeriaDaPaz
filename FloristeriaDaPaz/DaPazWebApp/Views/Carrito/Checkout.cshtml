@model DaPazWebApp.Models.CarritoViewModel
@{
    ViewData["Title"] = "Checkout";
    Layout = "_Layout";
    var usuario = ViewBag.Usuario as DaPazWebApp.Models.UsuarioConsultaModel;
    var nombre = usuario?.nombre ?? "Usuario";
    var correo = usuario?.correo ?? "correo@ejemplo.com";
    var direccion = usuario?.direccion ?? "DirecciÃ³n de entrega";
    var telefono = usuario?.telefono ?? "0000-0000";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Checkout</h2>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-lg-6">
                            <h4 class="fw-bold mb-3">Datos del Cliente</h4>
                            <table class="table table-bordered mb-4">
                                <tr><th>Nombre</th><td>@nombre</td></tr>
                                <tr><th>Correo</th><td>@correo</td></tr>
                                <tr><th>DirecciÃ³n</th><td>@direccion</td></tr>
                                <tr><th>TelÃ©fono</th><td>@telefono</td></tr>
                            </table>
                            <form method="post" action="/Carrito/ConfirmarPedido">
                                @Html.AntiForgeryToken()
                                <div class="form-group mb-3">
                                    <label for="tipoEntrega" class="control-label fw-bold">Tipo de Entrega</label>
                                    <select id="tipoEntrega" name="tipoEntrega" class="form-control">
                                        <option value="">-- Seleccione el tipo de entrega --</option>
                                        <option value="domicilio">EnvÃ­o a domicilio</option>
                                        <option value="retiro">Retiro en tienda</option>
                                    </select>
                                    <span class="text-danger" id="tipoEntregaError" style="display:none;">Seleccione el tipo de entrega.</span>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="metodoPago" class="control-label fw-bold">MÃ©todo de Pago</label>
                                    <select id="metodoPago" name="metodoPago" class="form-control">
                                        <option value="">-- Seleccione el mÃ©todo de pago --</option>
                                        <option value="efectivo">Efectivo</option>
                                        <option value="sinpe">SINPE MÃ³vil</option>
                                    </select>
                                    <span class="text-danger" id="metodoPagoError" style="display:none;">Seleccione el mÃ©todo de pago.</span>
                                </div>
<button type="submit" class="btn-guardar btn-lg w-100">Confirmar Pedido</button>
                                <script>
                                    document.querySelector('form').addEventListener('submit', function(e) {
                                        let tipoEntrega = document.getElementById('tipoEntrega').value;
                                        let metodoPago = document.getElementById('metodoPago').value;
                                        let valid = true;
                                        if (!tipoEntrega) {
                                            document.getElementById('tipoEntregaError').style.display = 'block';
                                            valid = false;
                                        } else {
                                            document.getElementById('tipoEntregaError').style.display = 'none';
                                        }
                                        if (!metodoPago) {
                                            document.getElementById('metodoPagoError').style.display = 'block';
                                            valid = false;
                                        } else {
                                            document.getElementById('metodoPagoError').style.display = 'none';
                                        }
                                        if (!valid) e.preventDefault();
                                    });
                                </script>
                            </form>
                        </div>
                        <div class="col-lg-6">
                            <h4 class="fw-bold mb-3">Resumen del Pedido</h4>
                            <div class="table-responsive">
                                <table class="table align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Imagen</th>
                                            <th>Producto</th>
                                            <th>Precio</th>
                                            <th>Cantidad</th>
                                            <th>Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr>
                                                <td style="width:80px">
                                                    <div class="position-relative">
                                                        <img src="@item.Imagen" alt="@item.NombreProducto" class="img-fluid rounded border" style="max-width:60px;max-height:60px;object-fit:contain;">
                                                        @if (item.TienePromocion)
                                                        {
                                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                                                -@item.IdPromocion%
                                                            </span>
                                                        }
                                                    </div>
                                                </td>
                                                <td class="fw-bold">
                                                    @item.NombreProducto
                                                    @if (item.TienePromocion)
                                                    {
                                                        <br><small class="text-success">ðŸŽ‰ @item.NombrePromocion</small>
                                                    }
                                                </td>
                                                <td>
                                                    @if (item.TienePromocion)
                                                    {
                                                        <span class="text-decoration-line-through text-muted">â‚¡@item.PrecioOriginal.ToString("N2")</span><br>
                                                        <span class="text-danger fw-bold">â‚¡@item.PrecioConDescuento.ToString("N2")</span>
                                                    }
                                                    else
                                                    {
                                                        <span>â‚¡@item.Precio.ToString("N2")</span>
                                                    }
                                                </td>
                                                <td>@item.Cantidad</td>
                                                <td>â‚¡@((item.TienePromocion ? item.PrecioConDescuento : item.Precio) * item.Cantidad).ToString("N2")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-end mt-3">
                                @{
                                    var totalSinDescuento = Model.Items.Sum(x => x.PrecioOriginal * x.Cantidad);
                                    var totalConDescuento = Model.Total;
                                    var ahorroTotal = totalSinDescuento - totalConDescuento;
                                }
                                
                                @if (ahorroTotal > 0)
                                {
                                    <div class="border rounded p-3 bg-light">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Subtotal:</span>
                                            <span>â‚¡@totalSinDescuento.ToString("N2")</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2 text-success">
                                            <span>ðŸŽ‰ Ahorros por promociones:</span>
                                            <span>-â‚¡@ahorroTotal.ToString("N2")</span>
                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between">
                                            <h4>Total a pagar:</h4>
                                            <h4 class="text-danger">â‚¡@totalConDescuento.ToString("N2")</h4>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <h4>Total: <span class="text-danger">â‚¡@Model.Total.ToString("N2")</span></h4>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
