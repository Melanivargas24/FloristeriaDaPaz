@model DaPazWebApp.Models.HistorialCompraViewModel
@{
    ViewData["Title"] = "Historial de Compras";
    Layout = "_Layout";
}

<div class="container" style="margin-top:35px; margin-bottom:135px">
    <div class="d-flex justify-between align-items-center encabezado-tablas">
        <h2 class="m-0">Historial de Compras</h2>
    </div>
    <div class="table-responsive">
        @if (Model.Facturas.Count == 0)
        {
            <div class="alert alert-info mt-3">No tienes compras registradas.</div>
        }
        else
        {
            <table class="table table-bordered" id="tablaHistorialUsuario">
                <thead>
                    <tr>
                        <th># Factura</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th>Detalle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var factura in Model.Facturas)
                    {
                        <tr data-factura="@factura.idFactura">
                            <td>@factura.idFactura</td>
                            <td>@factura.fechaFactura.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>₡@factura.totalFactura.ToString("N2")</td>
                            <td class="text-center">
                                <button class="btn-detalle" type="button" data-factura="@factura.idFactura" aria-expanded="false">
                                    <i class="fas fa-eye"></i> Ver detalle
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Contenedor para los detalles fuera de la tabla -->
            @foreach (var factura in Model.Facturas)
            {
                <div class="detalle-factura" id="detalle-@factura.idFactura" style="display: none;">
                    <div class="card mt-2 mb-3">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0"><i class="fas fa-receipt"></i> Detalle de Factura #@factura.idFactura</h6>
                        </div>
                        <div class="card-body p-3">
                            <h6 class="mb-3">Productos/Arreglos comprados</h6>
                            <div class="table-responsive">
                                <table class="table table-sm table-striped">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Tipo</th>
                                            <th>Nombre</th>
                                            <th>Cantidad</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var venta in Model.VentasPorFactura[factura.idFactura])
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge @(venta.idProducto != null ? "bg-success" : "bg-info")">
                                                        @(venta.idProducto != null ? "Producto" : "Arreglo")
                                                    </span>
                                                </td>
                                                <td>@(string.IsNullOrEmpty(venta.NombreProducto) ? "Sin nombre" : venta.NombreProducto)</td>
                                                <td><span class="badge bg-secondary">@venta.cantidad</span></td>
                                                <td><strong>₡@venta.total.ToString("N2")</strong></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            
                            @* Mostrar información de envío si existe *@
                            @if (factura.costoEnvio > 0)
                            {
                                <div class="alert alert-info mt-3 mb-0">
                                    <i class="fas fa-truck"></i> <strong>Envío a domicilio:</strong> ₡@factura.costoEnvio.ToString("N2")
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <div id="resultadoHistorialUsuario"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            // Inicializar DataTable con la estructura simplificada
            $('#tablaHistorialUsuario').DataTable({
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    zeroRecords: "No se encontraron resultados",
                    info: "Mostrando página _PAGE_ de _PAGES_",
                    infoEmpty: "No hay registros disponibles",
                    infoFiltered: "(filtrado de _MAX_ registros totales)",
                    paginate: {
                        previous: "Anterior",
                        next: "Siguiente"
                    }
                },
                pageLength: 10,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                dom: 'lrtip',
                order: [[1, 'desc']], // Ordenar por fecha descendente
                responsive: true,
                columnDefs: [
                    {
                        targets: 3, // Columna de detalle
                        orderable: false,
                        searchable: false
                    }
                ]
            });

            // Manejar el clic en los botones de detalle
            $(document).on('click', '.btn-detalle', function() {
                var facturaId = $(this).data('factura');
                var detalleDiv = $('#detalle-' + facturaId);
                var isExpanded = $(this).attr('aria-expanded') === 'true';
                
                // Ocultar todos los otros detalles primero
                $('.detalle-factura').not(detalleDiv).slideUp();
                $('.btn-detalle').not(this).attr('aria-expanded', 'false').html('<i class="fas fa-eye"></i> Ver detalle');
                
                if (isExpanded) {
                    $(this).html('<i class="fas fa-eye"></i> Ver detalle');
                    detalleDiv.slideUp();
                    $(this).attr('aria-expanded', 'false');
                } else {
                    $(this).html('<i class="fas fa-eye-slash"></i> Ocultar detalle');
                    detalleDiv.slideDown();
                    $(this).attr('aria-expanded', 'true');
                }
            });
        });
    </script>
}
