@model DaPazWebApp.Models.DistritoCostoEnvioModel

@{
    ViewData["Title"] = "Editar Costo de Envío";
    Layout = "_Layout";
}

<div class="container" style="margin-top:35px; margin-bottom:135px">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Editar Costo de Envío</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="idDistrito" />
                <input type="hidden" asp-for="nombreDistrito" />
                <input type="hidden" asp-for="nombreCanton" />
                <input type="hidden" asp-for="nombreProvincia" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h5 class="card-title">Información del Distrito</h5>
                                <p class="mb-1"><strong>Provincia:</strong> @Model.nombreProvincia</p>
                                <p class="mb-1"><strong>Cantón:</strong> @Model.nombreCanton</p>
                                <p class="mb-0"><strong>Distrito:</strong> @Model.nombreDistrito</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="costoEnvio" class="form-label">
                                <i class="fas fa-truck"></i> Costo de Envío (₡)
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">₡</span>
                                <input asp-for="costoEnvio" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="costoEnvio" class="text-danger"></span>
                            <div class="form-text">
                                Ingrese el costo de envío para este distrito en colones costarricenses.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
