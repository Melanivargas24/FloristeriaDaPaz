@model List<DaPazWebApp.Models.FacturaProveedorModel>

@{
    ViewData["Title"] = "Facturas de Proveedor";
    Layout = "_Layout";
}

<div class="container" style="margin-top:35px; margin-bottom:135px">
    <div class="d-flex justify-content-between align-items-center encabezado-tablas mb-3" style="gap: 0.75rem;">
        <h2 class="m-0">Facturas de Proveedor</h2>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3" style="gap: 0.75rem;">
        <div class="flex-grow-1">
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" id="buscadorFacturas" class="form-control" placeholder="Buscar factura..." aria-label="Buscar" aria-describedby="basic-addon1">
            </div>
        </div>

        <a asp-controller="FacturaProveedor" asp-action="Crear" class="btn-create">
            <i class="fas fa-plus"></i> Nueva Factura
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover" id="tablaFacturasProveedor">
            <thead class="table-dark">
                <tr>
                    <th># Factura</th>
                    <th>Proveedor</th>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center">No hay facturas registradas.</td>
                    </tr>
                }
                else
                {
                    foreach (var factura in Model)
                    {
                        <tr>
                            <td>@factura.IdFacturaProveedor</td>
                            <td>@factura.NombreProveedor</td>
                            <td>@factura.FechaFactura.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>₡@factura.TotalFactura.ToString("N2")</td>
                            <td class="text-center">
                                <a class="btn-detalle" asp-action="Detalle" asp-route-id="@factura.IdFacturaProveedor">Ver Detalle</a>
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            const tabla = $('#tablaFacturasProveedor').DataTable({
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    zeroRecords: "No se encontraron resultados",
                    info: "Mostrando página _PAGE_ de _PAGES_",
                    infoEmpty: "No hay registros disponibles",
                    infoFiltered: "(filtrado de _MAX_ registros totales)",
                    paginate: {
                        previous: "Anterior",
                        next: "Siguiente"
                    }
                },
                pageLength: 10,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                dom: 'lrtip',
                responsive: true
            });

            $('#buscadorFacturas').on('keyup', function () {
                tabla.search(this.value).draw();
            });
        });
    </script>
}
