	<script>
		document.addEventListener("DOMContentLoaded", function () {
		  const currentPath = window.location.pathname.toLowerCase();

		  let activePage = localStorage.getItem("activePage");
		  if (!activePage) {
			activePage = currentPath === "/" ? "/index" : currentPath;
			localStorage.setItem("activePage", activePage);
		  }

		  document.querySelectorAll(".custom-navbar-nav li").forEach(li =>
			li.classList.remove("active")
		  );

		  document.querySelectorAll(".custom-navbar-nav .nav-link").forEach(link => {
			const href = link.getAttribute("href")?.toLowerCase();
			if (
			  (activePage === "/index" && (href === "/" || href.includes("/index"))) ||
			  href === activePage
			) {
			  link.parentElement.classList.add("active");
			}
		  });
		});

		document.querySelectorAll(".nav-link").forEach(link => {
		  link.addEventListener("click", function () {
			const href = link.getAttribute("href")?.toLowerCase();
			if (href === "/" || href.includes("/index")) {
			  localStorage.setItem("activePage", "/index");
			} else {
			  localStorage.setItem("activePage", href);
			}
		  });
		});

		document.querySelector(".brand-home")?.addEventListener("click", function () {
		  localStorage.setItem("activePage", "/index");
		});
	</script>

